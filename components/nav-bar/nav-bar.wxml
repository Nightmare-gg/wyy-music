<!--components/nav-bar/nav-bar.wxml-->
<view class="nav-bar">
  <view class="status" style="height: {{statusBarHeight}}px;"></view>
  <view class="nav">
    <view class="left" bindtap="onLeftTap">
      <view class="slot">
        <slot name="left"></slot>
      </view>
      <view class="defalut">
        <image class="icon" src="/assets/images/icons/arrow-left.png"></image>
      </view>
    </view>
    <view class="center">
      <view class="slot">
        <slot name="center"></slot>
      </view>
      <view class="defalut">
       {{title}}
      </view>
    </view>
    <view class="right"></view>
  </view>
</view>
