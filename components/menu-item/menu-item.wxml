<!--components/menu-item/menu-item.wxml-->
<wxs src="../../utils/format.wxs" module="fmt"></wxs>
<view class="menu-item" bindtap="onMenuItemClick">
  <view class="top">
    <image class="image" mode="widthFix" src="{{itemData.coverImgUrl}}"/>
    <view class="count">{{fmt.formatCount(itemData.playCount)}}</view>
  </view>
  <view class="bottom">
    {{itemData.name}}
  </view>
</view>
