/* pages/music-player/music-player.wxss */
.bg-image, .bg-cover {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.bg-cover {
  background: rgba(0,0,0,.2);
  backdrop-filter: blur(10px);
}

.tabs {
  display: flex;
  font-size: 28rpx;
  color: #ddd;
}

.item.active {
  color: #fff;
}

.divider {
  margin: 0 8rpx;
}

.music {
  display: flex;
  flex-direction: column;
  padding: 40rpx 60rpx;
  color: #fff;
  box-sizing: border-box;
  font-size: 28rpx;
}
.music .album {
  flex: 1;
}

.album .image {
  width: 100%;
  border-radius: 12rpx;
}

.info .name {
  font-size: 48rpx;
  font-weight: 700;
}

.info .songer {
  margin-top: 10px;
}

.lyric {
  text-align: center;
  margin: 16rpx 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.progress {
  margin: 12rpx 0;
}

.progress .slider {
  margin: 16rpx 8rpx 10rpx 18rpx;
}

.time {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.controls {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 12rpx 0;
}

.controls .mode {
  width: 80rpx;
  height: 80rpx;
}

 .btn {
  width: 60rpx;
  height: 60rpx;
}

.controls .pause {
  width: 140rpx;
  height: 140rpx;
}
/* 歌词样式 */
.lyric-list {
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #aaa;
}

.lyric-list ::-webkit-scrollbar {
  display: none;
}

.lyric-list .item {
  height: 35px;
  line-height: 35px;
}

.lyric-list .item.active {
  color: #0f9;
  font-size: 32rpx;
}